    "version": "0.2.0",
    "configurations": [
         {
            "type": "lldb",
            "request": "launch",
            "name": "schnorr-operation",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ckb-taproot-deploy",
                    "--package=ckb-taproot-deploy"
                ],
                "filter": {
                    "name": "ckb-taproot-deploy",
                    "kind": "bin"
                }
            },
            "args": ["schnorr-operation", "--mode", "pubkey", "--secret-key", "0123456789012345678901234567890123456789012345678901234567890123"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "transfer to taproot",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ckb-taproot-deploy",
                    "--package=ckb-taproot-deploy"
                ],
                "filter": {
                    "name": "ckb-taproot-deploy",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "debug"
            },
            "args": ["transfer-taproot", "--sender-key", "0123456789012345678901234567890123456789012345678901234567890123",
                    "--example-code-hash", "0123456789012345678901234567890123456789012345678901234567890123",
                    "--example-args", "0123456789012345678901234567890123456789012345678901234567890123456789012345678901",
                    "--taproot-internal-key", "76fe8d33286b24062edd278ed312e23022d4241e587b64f8d208bd6f39e2a959",
                    "--taproot-code-hash", "0123456789012345678901234567890123456789012345678901234567890123",
                    "--capacity", "10000",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Generate schnorr keys",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ckb-taproot-deploy",
                    "--package=ckb-taproot-deploy"
                ],
                "filter": {
                    "name": "ckb-taproot-deploy",
                    "kind": "bin"
                }
            },
            "args": ["generate-keys"],
            "cwd": "${workspaceFolder}"
        },
    ]
}